
page {
  padding-bottom: 90rpx;
}

.cart_title {
  color: var(--themeColor);
  padding:5rpx;
  border-bottom: 1rpx solid red;
}

.cart_item {
  display: flex;
  /* height: 80rpx; */
  border-bottom: 1rpx solid #ccc;

}
.checkbox {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
navigator {
  flex: 2;
  padding-right:20rpx;
}
.cart_desc {
  flex: 4;
  display: flex;  
  flex-direction: column;
  justify-content: space-between
}

.cart_r{
  display: flex;  
  justify-content: space-between;
}
.cart_main_num {
   display: flex; 
}
.cart_main_num  > view {
  border: 1rpx solid #ccc;
  padding:10rpx;
}






.pay_wrap {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
}
.pay_check {
  flex: 2;
}
.pay_all {
  flex: 5;
  text-align: right;
  padding-right: 10rpx;
}
.pay_all text {
  color:var(--themeColor);
  font-weight: 700;
}
.pay_pay {
  flex: 2;
    background: red;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;

}